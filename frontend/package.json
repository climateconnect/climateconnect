{
  "name": "climate-connect-frontend",
  "description": "This is the user-facing client code for the Climate Connect platform.",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build-storybook": "build-storybook",
    "build": "next build",
    "deploy": "yarn build && yarn export",
    "dev": "next dev",
    "export": "next export",
    "fix-lint": "eslint . --fix",
    "format": "prettier --write '**/*.{js,jsx,json,md}'",
    "gcp-build": "IS_BUILDING_ON_GOOGLE_CLOUD=1 yarn build",
    "lint:watch": "esw --cache --watch --color --fix",
    "lint": "eslint .",
    "pretest": "yarn lint",
    "start": "NODE_ENV=production node server.js",
    "storybook": "start-storybook -p 6006",
    "test:watch": "jest --watch",
    "test": "jest"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/test/test-shim.js",
      "<rootDir>/test/test-setup.js"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/test/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/test/__mocks__/styleMock.js"
    }
  },
  "dependencies": {
    "@date-io/date-fns": "1.3.13",
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.56",
    "@material-ui/pickers": "^3.2.10",
    "@react-google-maps/api": "^1.13.0",
    "@zeit/next-css": "^1.0.1",
    "axios": "^0.21.2",
    "browser-image-compression": "^1.0.12",
    "cheerio": "^1.0.0-rc.10",
    "date-fns": "^2.12.0",
    "dotenv": "^8.2.0",
    "globby": "^11.0.1",
    "html-react-parser": "^1.4.0",
    "humanize-duration": "^3.22.0",
    "lodash": "^4.17.21",
    "next": "^11.1.3",
    "next-cookies": "^2.0.3",
    "node-fetch": "^2.6.1",
    "object-path": "^0.11.8",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-avatar-editor": "11.0.7",
    "react-beautiful-dnd": "^13.0.0",
    "react-dom": "^17.0.1",
    "react-ga": "^3.2.0",
    "react-google-charts": "^3.0.15",
    "react-infinite-scroller": "^1.2.4",
    "react-linkify": "^1.0.0-alpha",
    "react-loader-spinner": "^3.1.14",
    "react-mentions": "^4.3.0",
    "react-minimal-pie-chart": "^8.1.0",
    "react-multi-carousel": "^2.5.5",
    "react-share": "^4.4.0",
    "react-text-loop": "^2.3.0",
    "react-timeago": "^4.4.0",
    "react-truncate": "^2.4.0",
    "react-typist": "^2.0.5",
    "react-youtube": "^7.13.0",
    "universal-cookie": "^4.0.3",
    "use-long-press": "^1.1.1",
    "youtube-regex": "^1.0.5"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@storybook/addon-actions": "^6.2.9",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/addon-links": "^6.2.9",
    "@storybook/react": "^6.2.9",
    "babel-loader": "^8.2.2",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "eslint": "^6.6.0",
    "eslint-plugin-react": "^7.16.0",
    "eslint-watch": "^7.0.0",
    "jest": "^26.6.3",
    "next-compose-plugins": "^2.2.0",
    "prettier": "2.2.0"
  }
}
