{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "preserve",
    "module": "commonjs",
    "resolveJsonModule": true,
    "allowJs": false,
    "checkJs": false,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "incremental": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "paths": {
      "devlink/*": ["./*"] // Map 'devlink/*' to the root
    }
  },
  "include": ["src/*", "pages/*", "public/*"],
  "exclude": ["node_modules"]
}
